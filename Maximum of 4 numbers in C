//Normal :
#include <stdio.h>

int main()
{
    int a,b,c,d,max;
    scanf("%d%d%d%d",&a,&b,&c,&d);
    if(a>b && a>c && a>d){
        printf("a : %d is maximum",a);
    }
    else if(b>c && b>d){
        printf("b : %d is maximum",b);
    }
    else{
        if(c>d){
            printf("c : %d is maximum",c);
        }
        else{
            printf("d : %d is maximum",d);
        }
    }

    return 0;
}
************************************************************
//Conditional operator:
#include <stdio.h>

int main()
{
    int a,b,c,d,max;
    scanf("%d%d%d%d",&a,&b,&c,&d);
    max = a>b && a>c && a>d ? a : b>c && b>d ? b : c>d ? c:d;
    printf("%d",max);

    return 0;
}
