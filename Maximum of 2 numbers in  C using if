//Using float
int main()
{
float a,b;
printf("enter two values");
scanf("%f %f", &a,&b);
a>b?printf("a is max"):printf("b is max");
}
***************************************************************
//using Int
int main()
{
int a,b;
printf("enter two values");
scanf("%d %d", &a,&b);
a>b?printf("a is max"):printf("b is max");
}
****************************************************************

//Using only One If:
#include <stdio.h>

int main(){
    int a,b;
    printf("enter two values");
    scanf("%d %d", &a,&b);
    if(a>b){
        b=a;
    }
    printf("Maximum number is : %d",b);
}

//Another method:
int main(){
int a=1,b=2,max;
max=a;
if (a>b)
max=b;
printf("%d is max",max);
}

//Another method:
if (a>b){
printf("%d is max",a);
exit(10);
}

printf("%d is max",b);
}

//Another method:
int main(){
int a=0,b=3;

if (a>b){
printf("%d is max",a);
return 0;
}

printf("%d is max",b);
}
*****************************************************************

//To overcome the same input numbers :
#include <stdio.h>
int main(){
    int a,b;
    printf("enter two values");
    scanf("%d %d", &a,&b);
    if(a>b){
        printf("%d is maximum",a);
    }
    else if(a==b){
        printf("Both values are same");
    }
    else{
        printf("%d is maximum",b);
    } 
}
