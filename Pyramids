#include<stdio.h>
int main(){
    int inp=4;
    int t=2;
    int temp=1,odd=(inp*2)-1;
    for(int i=1;i<=inp;i++){
        for(int j=1;j<temp;j++){
            printf(" ");
        }
        for(int k=1;k<=odd;k++){
            printf("*");
        }
        for(int j=1;j<temp;j++){
            printf("  ");
        }
        for(int k=1;k<=odd;k++){
            printf("*");
        }
        odd-=2;
        temp++;
        printf("\n");
    }
    temp=inp,odd=1;
    for(int i=1;i<=inp;i++){
        for(int j=1;j<temp;j++){
            printf(" ");
        }
        for(int k=1;k<=odd;k++){
            printf("*");
        }
        for(int j=1;j<temp;j++){
            printf("  ");
        }
        for(int k=1;k<=odd;k++){
            printf("*");
        }
        temp--;
        odd+=2;
        printf("\n");
    }
}
input : 4
output:
**************
 *****  *****
  ***    ***
   *      *
   *      *
  ***    ***
 *****  *****
**************
