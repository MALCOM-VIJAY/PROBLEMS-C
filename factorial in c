//While loop
#include <stdio.h>
int main(){
    int a,b=1,sum=1;
    printf("Enter the value: ");
    scanf("%d",&a);
    while(b<=a){
        sum*=b;
        b++;
    }
    printf("%d",sum);
    return 0;
}
//Another method
#include <stdio.h>
int main(){
    int a,sum=1;
    printf("Enter the value: ");
    scanf("%d",&a);
    while(a>0){
        sum*=a;
        a--;
    }
    printf("%d",sum);
    return 0;
}
