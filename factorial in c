//Do while :
#include <stdio.h>
int
main ()
{ int fac = 1, n;
  scanf ("%d", &n);
  if (n > 0)
    {
      do
	{
	  fac *= n;
	  n--;
	}while (n > 0);
      }
      printf ("factorial is %d", fac);
    }
