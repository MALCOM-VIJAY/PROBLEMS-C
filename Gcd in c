//For loop -including negative numbers
#include <stdio.h>
int main ()
{
  int a,b,n1,n2,gcd;
  printf("Enter the a and b: ");
  scanf("%d %d",&a,&b);
  n1 = a>0?a:-a;
  n2 = b>0?b:-b;
  for(int i=1;i<=n1 && i<=n2;i++){
      if(n1%i==0 && n2%i==0){
          gcd=i;
      }
  }
  printf("GCD : %d",gcd);
  return 0;
}
**********************************************
//While loop
#include <stdio.h>
int main ()
{
  int a,b,n1,n2,gcd;
  printf("Enter the a and b: ");
  scanf("%d %d",&a,&b);
  n1 = a>0?a:-a;
  n2 = b>0?b:-b;
  while(n1!=n2){
      if(n1>n2){
          n1=n1-n2;
      }
      else{
          n2=n2-n1;
      }
  }
  printf("GCD : %d",n1);
  return 0;
}
*************************************************
//do while loop
main(){
int a,b;
scanf("%d %d",&a,&b);
if(a!=b){
do{
if(a>b)
a=a-b
else
b=b-a
}while(a!=b)
}
printf("%d",a);
}
