//Using bitwise operators:
#include <stdio.h>

int main()
{
    int a,b;
    scanf("%d",&a);
    if((a & 1)==0){
        printf("EVEN");
    }
    else{
        printf("ODD");
    }
}
*********************************************************

//Using if and else and assingment operator:
#include <stdio.h>

int main()
{
    int a;
    printf("Enter a and b values : ");
    scanf("%d",&a);
    if(a%2==0){
        printf("%d is an even number.",a);
        
    }
    else{
        printf("%d is an odd number.",a);
    }
}
***************************************************
//Using if and else without assingment operator :
#include <stdio.h>

int main()
{
    int a;
    printf("Enter a and b values : ");
    scanf("%d",&a);
    if(a%2){
        printf("%d is an odd number.",a);
        
    }
    else{
        printf("%d is an even number.",a);
    }
}
**************************************************
//Using conditional operator :
#include <stdio.h>

int main()
{
     int x,y;
     scanf("%d",&x);
     y = x%2==0 ? printf("It is even number") : printf("It is odd number");
    return 0;
}

//Another method:
main(){
int a;
scanf("%d", &a);

a%2?printf("a is odd"):printf("a is even");
}

