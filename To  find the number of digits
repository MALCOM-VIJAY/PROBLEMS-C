#include <iostream>

using namespace std;

int main()
{
    int num,digit=0;
    cout<<"Enter the number : ";
    cin>>num;
    if(num==0){
        cout<<"0 digits";
    }
    else{
        if(num<0){
            num = -1*num;
        }
        while(num>0){
            num = num/10;
            digit++;
        }
        }
    cout<<"Total digits: "<<digit;
    return 0;
}
