//Using relational operator:
#include <stdio.h>
int main(){
    int a,b,max;
    printf("Enter the two numbers :");
    scanf("%d %d",&a,&b);
    max = (a>b)*a+(b>a)*b;
    printf("%d is maximum",max);
    return 0;
}
***************************************************

//Without using relational,conditional,if :
#include <stdio.h>
#include <stdlib.h>
int main(){
    int a,b,max;
    printf("Enter the two numbers :");
    scanf("%d %d",&a,&b);
    max = (a+b+abs(a-b))/2;
    printf("%d is maximum",max);
    return 0;
}
